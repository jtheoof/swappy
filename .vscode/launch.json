{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "swappy - geometry",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/meson-out/swappy",
      "args": ["-g", "0,0 200x200"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "G_MESSAGES_DEBUG",
          "value": "all"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "swappy - file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/meson-out/swappy",
      "args": ["-f", "docs/images/screenshot.png"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "G_MESSAGES_DEBUG",
          "value": "all"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "swappy - stdin",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/meson-out/swappy",
      "args": ["-f", "-"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "G_MESSAGES_DEBUG",
          "value": "all"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
